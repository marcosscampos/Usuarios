@model IEnumerable<Marcos_Vinicius_DR2_TP3.Models.Usuario>

@{
    ViewBag.Title = "Página Inicial";
}

<p>
    @Html.ActionLink("Adicionar um novo usuário", "Create")
</p>
<p>
    @Html.ActionLink("Pesquisar", "Search")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sobrenome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataDeAniversario)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sobrenome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataDeAniversario)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new {id = item.UsuarioId}) |
            @Html.ActionLink("Detalhes", "Details", new {id = item.UsuarioId}) |
            @Html.ActionLink("Deletar", "Delete", new {id = item.UsuarioId}, new { onclick = "return confirm('Você tem certeza que deseja excluir funcionário?');" })
        </td>
    </tr>
}

</table>
